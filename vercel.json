{
  "version": 2,
  "buildCommand": "node build.js",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/therapy",
      "destination": "/therapy_static.html"
    },
    {
      "source": "/chat",
      "destination": "/therapy_static.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
